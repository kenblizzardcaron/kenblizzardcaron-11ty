<!DOCTYPE html>
<html lang="{{ site.lang }}">
    <head>
        <meta charset="UTF-8">
        <title>{{ site.title or title }}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <meta content="{{ keywords }}" name="keywords">
        <meta content="{{ description }}" name="description">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/images/favicons/apple-touch-icon.png' }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ '/assets/images/favicons/favicon-32x32.png' }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ '/assets/images/favicons/favicon-16x16.png' }}">
        <link rel="manifest" href="/site.webmanifest">
        <link rel="canonical" href="{{ site.canonical }}">
        <meta property="og:locale" content="{{ site.locale }}">
        <meta property="og:type" content="website">
        <meta property="og:title" content="{{ title }}">
        <meta property="og:description" content="{{ author.name }}, {{ author.title }}, {{ author.org }}">
        <meta property="og:url" content="{{ site.url }}">
        <meta property="og:site_name" content="{{ site.name }}">
        <meta property="og:image" content="{{ author.image }}">
        <meta property="og:image:width" content="500">
        <meta property="og:image:height" content="500">
        <meta property="og:image:type" content="image/jpeg">
        <meta content="All" name="audience">
        <meta content="index,follow" name="robots">
        <link rel="stylesheet" href="{{ '/assets/css/styles.css' | url }}">
    </head>
    <body class="antialiased text-neutral-950 bg-neutral-50 leading-normal">
         <a class="print:hidden" href="{{ '/assets/pdf/kenblizzardcaron.pdf' | url }}" download="kenblizzardcaron.pdf">
          <div class="inline-flex items-center highlight mt-6 w-auto">
            <span class="text-lead border-r-2 border-r-emerald-400 dark:border-r-emerald-600 px-3">
              <svg class="h-4 w-4" width="800px" height="800px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M15.197 3.35462C16.8703 1.67483 19.4476 1.53865 20.9536 3.05046C22.4596 4.56228 22.3239 7.14956 20.6506
                    8.82935L18.2268 11.2626M10.0464 14C8.54044 12.4882 8.67609 9.90087 10.3494 8.22108L12.5 6.06212"
                  stroke="#1C274C"
                  stroke-width="1.5"
                  stroke-linecap="round"/>
                <path
                  d="M13.9536 10C15.4596 11.5118 15.3239 14.0991 13.6506 15.7789L11.2268 18.2121L8.80299 20.6454C7.12969 22.3252 4.55237
                    22.4613 3.0464 20.9495C1.54043 19.4377 1.67609 16.8504 3.34939 15.1706L5.77323 12.7373"
                  stroke="#1C274C"
                  stroke-width="1.5"
                  stroke-linecap="round"/>
              </svg>
            </span>
            <span class="font-bold py-1 px-3 text-lg">Download PDF</span>
          </div>
        </a>
        <div class="w-a4 h-a4 p-4">
            <section class="pb-2 grid p-0 grid-cols-3 justify-between">
                <div class="text-start">
                    <h1>{{ author.name }}</h1>
                </div>
                <div class="text-center">
                    {% if author.openToWork %}
                        {{ author.printTelephone }}
                    {% endif %}
                </div>
                <div class="text-end">{{ author.email }}</div>
                <div class="text-start">{{ author.location }}</div>
                <div class="text-center"></div>
                <div class="text-end">{{ author.website }}</div>
            </section>
            <section class="pb-2 text-xs">
                <p>{{ author.statement }}</p>
            </section>
            <section class="pb-2 text-xs">
                {% for skill in author.skills %}
                    <h4 class="font-header font-semibold uppercase mt-2 mb-2">{{ skill.type }}</h4>
                    <ul
                        class="flex flex-wrap">
                        {#% skill.tools.length %#}
                        {% for tool in skill.tools|sort(attribute='language', reverse=false) %}
                            <li class="relative inline-block mb-1 mr-1 ">
                                <span class="FR">
                                    {{ tool.language }}
                                    {% if not loop.last %},
                                    {% endif %}
                                </span>
                            </li>
                        {% endfor %}
                    </ul>
                {% endfor %}
            </section>
            <section class="pb-2 text-xs">
                <h4 class="font-header font-semibold uppercase mb-2">Work Experience</h4>
                <ul class="pb-2 text-xs grid p-0 grid-cols-1 justify-between">
                    {% for item in author.worksFor %}
                        <li class="relative">
                            <p class="font-bold">{{ item.companyName }}</p>
                            <p class="font-bold">{{ item.title }}</p>
                            <p class="mt-1">{{ item.time_start }} - {{ item.time_end }}</p>
                            <p class="mt-1 mb-1">{{ item.more_info }}</p>
                        </li>
                    {% endfor %}
                </ul>
            </section>
            <h4 class="font-header font-semibold uppercase mb-2">Education & Certifications</h4>
            <ul class="pb-2 text-xs grid p-0 grid-cols-3 justify-between">
                {% for item in author.alumniOf %}
                    <li class="relative mb-2">
                        <p class="font-bold">{{ item.certification }}</p>
                        <p class="mt-1">{{ item.org }}</p>
                        {% if item.address %}
                            {{ item.address.addressLocality }}, {{ item.address.addressRegion }}
                        {% endif %}
                        <time datetime="{{ item.year }}" class="mt-1">{{ item.year }}</time>
                    </li>
                {% endfor %}
                {% for item in author.hasCredential %}
                    <li class="relative mb-2">
                        <p class="font-bold">{{ item.certification }}</p>
                        <p class="mt-1">{{ item.org }}</p>
                        {% if item.address %}
                            {{ item.addressLocality }}, {{ item.addressRegion }}
                        {% endif %}
                        <time datetime="{{ item.year }}" class="mt-1">{{ item.year }}</time>
                    </li>
                {% endfor %}
            </ul>
        </section>
    </body>
</html></body></html></div></body></html></body></html>